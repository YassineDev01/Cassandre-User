{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white p-8 rounded shadow-lg">
        <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-6">Créer un compte</h2>
        <p class="text-sm text-gray-700 text-center mb-8">
            Rejoignez notre plateforme et profitez de tous nos services.
        </p>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(registrationForm.nom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_row(registrationForm.prenom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_row(registrationForm.password, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}

            <button type="submit" class="inline-block rounded border border-indigo-600 bg-indigo-600 px-5 py-3 font-medium text-white shadow-sm transition-colors hover:bg-indigo-700">
                S’inscrire
            </button>
        {{ form_end(registrationForm) }}

        <p class="mt-6 text-center text-sm text-gray-700">
            Vous avez déjà un compte ? 
            <a href="{{ path('app_login') }}" class="font-medium text-primary hover:text-primary-600">Connectez-vous</a>
        </p>
    </div>
</div>
{% endblock %}
