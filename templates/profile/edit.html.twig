<h2 class="text-xl font-semibold mb-4">Modifier Profil</h2>

{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div class="text-xl font-semibold mb-4">


{# messages flash error #}
{% for flash_message in app.flashes('error') %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline">{{ flash_message }}</span>
    </div>
{% endfor %}

    <div>
    
        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'mt-1 mb-4 w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:outline-none border-2 p-2'}}) }}
        {{ form_errors(form.nom, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
    </div>

    <div>
        {{ form_label(form.prenom, 'Pr√©nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'mt-1 mb-4 w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:outline-none border-2 p-2'}}) }}
        {{ form_errors(form.prenom, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
    </div>

    <div class="sm:col-span-2">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'mt-1 mb-4 w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:outline-none border-2 p-2'}}) }}
        {{ form_errors(form.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
    </div>
</div>

<button type="submit" class="mt-4 w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg shadow-md transition">
    Enregistrer
</button>

{{ form_end(form) }}
