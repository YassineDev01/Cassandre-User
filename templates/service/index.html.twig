  </div>


<div class="p-8 space-y-12 bg-gray-50 min-h-screen">

    <h1 class="heading-primary">Test Complet des Boutons</h1>

    {# ------------------ PRIMARY BUTTONS ------------------ #}
    <div class="space-y-4">
        <h2 class="text-xl font-semibold">Primary Buttons</h2>
        <div class="flex gap-4 flex-wrap">
            <a href="#" class="btn btn-primary btn-sm">Primary Small</a>
            <a href="#" class="btn btn-primary btn-md">Primary Medium</a>
            <a href="#" class="btn btn-primary btn-lg">Primary Large</a>
            <a href="#" class="btn btn-primary btn-md" disabled>Primary Disabled</a>
            <button class="btn btn-primary btn-md btn-loading">Primary Loading</button>
        </div>
    </div>

    {# ------------------ SECONDARY BUTTONS ------------------ #}
    <div class="space-y-4">
        <h2 class="text-xl font-semibold">Secondary Buttons</h2>
        <div class="flex gap-4 flex-wrap">
            <a href="#" class="btn btn-secondary btn-sm">Secondary Small</a>
            <a href="#" class="btn btn-secondary btn-md">Secondary Medium</a>
            <a href="#" class="btn btn-secondary btn-lg">Secondary Large</a>
            <a href="#" class="btn btn-secondary btn-md" disabled>Secondary Disabled</a>
            <button class="btn btn-secondary btn-md btn-loading">Secondary Loading</button>
        </div>
    </div>

    {# ------------------ OUTLINE BUTTONS ------------------ #}
    <div class="space-y-4">
        <h2 class="text-xl font-semibold">Outline Buttons</h2>
        <div class="flex gap-4 flex-wrap">
            <a href="#" class="btn btn-outline btn-sm">Outline Small</a>
            <a href="#" class="btn btn-outline btn-md">Outline Medium</a>
            <a href="#" class="btn btn-outline btn-lg">Outline Large</a>
            <a href="#" class="btn btn-outline btn-md" disabled>Outline Disabled</a>
            <button class="btn btn-outline btn-md btn-loading">Outline Loading</button>
        </div>
    </div>

    {# ------------------ BUTTONS AVEC ICONES ------------------ #}
    <div class="space-y-4">
        <h2 class="text-xl font-semibold">Buttons with Icons</h2>
        <div class="flex gap-4 flex-wrap">
            {% set icon %}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {% endset %}

            <a href="#" class="btn btn-primary btn-md btn-icon-left">
                {{ icon }} Icon Left
            </a>

            <a href="#" class="btn btn-secondary btn-md btn-icon-right">
                Icon Right {{ icon }}
            </a>

            <a href="#" class="btn btn-outline btn-md btn-icon-left btn-icon-right">
                {{ icon }} Both Icons {{ icon }}
            </a>
        </div>
    </div>

</div>


